<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ferrinweb.app.commoditybarcodescanner" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>条码扫描</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="www/icons/48.png" />
        <icon density="hdpi" src="www/icons/72.png" />
        <icon density="xhdpi" src="www/icons/96.png" />
        <icon density="xxhdpi" src="www/icons/144.png" />
        <icon density="xxxhdpi" src="www/icons/192.png" />
        <splash density="mdpi" src="www/icons/start-bg.png" />
        <splash density="hdpi" src="www/icons/start-bg.png" />
        <splash density="xhdpi" src="www/icons/start-bg.png" />
        <splash density="xxhdpi" src="www/icons/start-bg.png" />
        <splash density="xxxhdpi" src="www/icons/start-bg.png" />
        <preference name="AppendUserAgent" value="ferrinweb" />
        <preference name="orientation" value="portrait" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="SplashMaintainAspectRatio" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-file" spec="^6.0.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.3" />
    <plugin name="cordova-plugin-keyboard" spec="D:\software\keyboardPlugin" />
    <plugin name="cordova-plugin-console" spec="^1.1.0" />
    <plugin name="es6-promise-plugin" spec="^4.2.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <plugin name="cordova-plugin-vibration" spec="^3.1.1" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.1.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-splashscreen" spec="^6.0.0" />
    <engine name="android" spec="^7.0.0" />
</widget>
